<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="net.splatspot.entity.User" table="USER">
        <id name="id" type="int" column="id">
            <generator class="identity"/>
        </id>

        <property name="nickname" column="nickname" type="string"/>
        <property name="friendCode" column="friend_code" type="string"/>
        <property name="splashTagName" column="splash_tag_name" type="string"/>
        <property name="splashTagNumber" column="splash_tag_number" type="string"/>
        <property name="shareInfoWithUsers" column="share_info_with_users" type="yes_no"/>
        <property name="shareWhenReadyToPlay" column="share_when_ready_to_play" type="yes_no"/>

        <set name="sharedMediaList" cascade="all">
            <key column="user_id"/>
            <one-to-many class="net.splatspot.entity.SharedMedia"/>
        </set>
    </class>
</hibernate-mapping>